  <!--Import Google Icon Font-->
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

</head>
<body class = "grey lighten-5">

<!--navbar -->
<nav class="grey lighten-4 white z-depth-0" role="navigation">

    <div class="nav-wrapper container">
      <a href="/" class="brand-logo"><%= image_tag("logo.png",size: "120x30", alt: "VODD.in")
 %></a>
      <a href="#" data-activates="mobile-demo" class="button-collapse grey-text"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">


        <% if user_signed_in? %>
          <li class=""><a href="/">Projects</a></li>
          <% if current_user.role == 'admin' %>
            <li class=""><a href="/activities">Activities</a></li>
            <li class=""><a href="/admin">Dashboard</a></li>

          <% end %>
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a></li>

        <% else %>
          <li><a href="/">Home</a></li>
          <li><%= link_to "About", pages_about_path %></li>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>


      </ul>
      <ul class="side-nav" id="mobile-demo">
        <% if user_signed_in? %>
          <li><a href="/">Projects</a></li>
          <% if current_user.role == 'admin' %>
            <li class=""><a href="/activities">All Activities</a></li>
            <li class=""><a href="/admin">Dashboard</a></li>
          <% end %>
          <li><%= link_to "Edit Profile", edit_user_registration_path %> </li>
          <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li class="active"><a href="/">Home</a></li>
          <li><%= link_to "About", pages_about_path %></li>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

<ul id="dropdown1" class="dropdown-content">
  <li><%= link_to "Edit Profile", edit_user_registration_path %> </li>
  <li class="divider"></li>
  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>


</ul><!-- end nav -->

<div class="row">
  <div class="container ">
    <%= tinymce %>
    <% if notice %>
          <script type="text/javascript">
            Materialize.toast('<%= notice %>', 4000)
          </script>
        <% end %>
        <% if alert %>
          <script type="text/javascript">
            Materialize.toast('<%= alert %>', 4000)
          </script>
        <% end %>

<%= yield %>

  </div>
</div>

</body>

