<p class="right-align"> <%= link_to 'New Activity', new_activity_path, class: "waves-effect waves-teal btn" %> </p>

<div class="col s12 z-depth-1 card-panel"><br>
  <h5 class="center-align">All Activity</h5><br>

  <table>
    <thead>
      <tr>
        <th data-field="id">Activity ID</th>
        <th>Title</th>
        <th>Status</th>
        <th>Project ID</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td>A<%= activity.id %></td>
           <td><%= link_to "#{activity.title}", activity %></td>
          <% if activity.done %>
            <td><div class="chip green">done</div></td>
            <% else %>
            <td><div class="chip amber lighten-3">pending</div></td>
          <% end %>
          <td><%= link_to "V#{activity.project.id}", activity.project %></td>
          <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
          <td><%= link_to 'Delete', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
